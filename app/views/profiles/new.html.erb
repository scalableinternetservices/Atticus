<h2>Create Profile</h2>

<%= form_for @user, url: profile_path(@user), html: { method: :put } do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %> 
  </div>

  <% if (!current_user.is_student) %>
    <div class="field"> 
      <%= f.label :corporation %><br />
      <%= f.text_field :corporation, autofocus: true %>
    </div>
  <% else %>

    <div class="field">
      <%= f.label :school %><br />
      <%= f.text_field :school, autofocus: true %>
    </div>
  <% end %>

   <div class="field">
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url, autofocus: true %>
  </div> 
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, rows: 10, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

<% end %>

<%= link_to "Back", :back %>

