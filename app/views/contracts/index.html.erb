<h1>Listing contracts</h1>

<table>
<% @contracts.each do |contract| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td>
      <%= image_tag(contract.image_url, class: 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
        <dt><%= contract.title %></dt>
        <dd><%= truncate(strip_tags(contract.description),
               length: 80) %></dd>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Show', contract %><br/>
      <%= link_to 'Edit', edit_contract_path(contract) %><br/>
      <%= link_to 'Destroy', contract, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

