<h1 class="page-header"><%= @contract.title %></h1>
<p>
  <strong>Company:</strong>
  <%= @contract.company %>
</p>

<p>
  <strong>Description:</strong>
  <%= @contract.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @contract.image_url %>
</p>

<p>
  <strong>Pay:</strong>
  <%= @contract.pay %>
</p>

<% if (current_user.id == @contract.owner) %>
    <%= link_to 'Edit this contract', edit_contract_path %>
    <% if @contract.progress == false %>
        <% @contract.users.each do |u| %>
            <% if u.is_student %>
                <p><strong><%= u.first_name %></strong> is interested in this contract!</p>
                <%= link_to 'Assign student', start_contract_path %>
            <% end %>
        <% end %>
    <% else %>
        <p> This contract is under progress! </p>
    <% end %>

<% end %>
<br/>
<%= link_to 'Back', contracts_path %>
